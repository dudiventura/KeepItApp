<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.picsize.keepItApp" version="3.0.0">
  <name>keepItApp</name>
  <description>
    keepItApp
  </description>
  <author href="http://www.picsize.co.il" email="shay@picsize.co.il">Next Step</author>
  <content src="index.html"/>

  <preference name="phonegap-version" value="cli-5.2.0"/>
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="false"/>
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="true"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="android-build-tool" value="gradle" />

  <gap:plugin name="org.apache.cordova.console"/>
  <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
  <gap:plugin name="cordova-plugin-geolocation" source="npm" />
  <gap:plugin name="org.apache.cordova.dialogs" version="0.3.0" />
  <gap:plugin name="cordova-plugin-inappbrowser" source="npm"/>
  <gap:plugin name="cordova-plugin-network-information" source="npm"/>
  <gap:plugin name="cordova-plugin-splashscreen" version="2.1.0" source="npm" />
  <gap:plugin name="cordova-plugin-whitelist" source="npm" />

  <icon src="res/icon/ios/Icon.png" />
  <icon src="res/icon/android/drawable-ldpi/ic_launcher.png"   gap:platform="android"    gap:density="ldpi" />
  <icon src="res/icon/android/drawable-mdpi/ic_launcher.png"   gap:platform="android"    gap:density="mdpi" />
  <icon src="res/icon/android/drawable-hdpi/ic_launcher.png"   gap:platform="android"    gap:density="hdpi" />
  <icon src="res/icon/android/drawable-xhdpi/ic_launcher.png"  gap:platform="android"    gap:density="xhdpi" />
  <icon src="res/icon/android/drawable-xxhdpi/ic_launcher.png"  gap:platform="android"    gap:density="xxhdpi" />

  <icon src="res/icon/ios/Icon.png"     gap:platform="ios"     width="57" height="57" />
  <icon src="res/icon/ios/Icon-72.png"  gap:platform="ios"      width="72" height="72" />
  <icon src="res/icon/ios/Icon@2x.png"  gap:platform="ios"     width="114" height="114" />
  <icon src="res/icon/ios/Icon-72@2x.png"    gap:platform="ios"      width="144" height="144" />
  <icon src="res/icon/ios/AppIcon.appiconset/Icon-60@2x.png"   gap:platform="ios"   width="120" height="120" />
  <icon src="res/icon/ios/AppIcon.appiconset/Icon-76@2x.png"   gap:platform="ios"   width="152" height="152" />
  <icon src="res/icon/ios/AppIcon.appiconset/Icon-76.png"    gap:platform="ios"     width="76" height="76" />

  <gap:splash src="res/screen/android/ldpi.png"  gap:platform="android" gap:density="ldpi" />
  <gap:splash src="res/screen/android/mdpi.png"  gap:platform="android" gap:density="mdpi" />
  <gap:splash src="res/screen/android/hdpi.png"  gap:platform="android" gap:density="hdpi" />
  <gap:splash src="res/screen/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
  <gap:splash src="res/screen/android/xxhdpi.png" gap:platform="android" gap:density="xxhdpi" />

  <gap:splash src="res/screen/ios/Default~iphone.png"    gap:platform="ios"     width="320" height="480" />
  <gap:splash src="res/screen/ios/Default@2x.png" gap:platform="ios"     width="640" height="960" />
  <gap:splash src="res/screen/ios/Default-568h@2x.png" gap:platform="ios"     width="640" height="1136" />
  <gap:splash src="res/screen/ios/Default-Portrait~ipad_768x1024.png"      gap:platform="ios"     width="768" height="1024" />
  <gap:splash src="res/screen/ios/Default-Landscape~ipad_1024x768.png"     gap:platform="ios"     width="1024" height="768" />


  <access origin="*"/>
  <access origin="*.pushwoosh.com"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>