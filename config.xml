<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.picsize.keepItApp" version="1.0.0">
  <name>keepItApp</name>
  <description>
    keepItApp
  </description>
  <author href="http://www.picsize.co.il" email="shay@picsize.co.il">Picsize</author>
  <content src="index.html"/>

  <preference name="phonegap-version" value="cli-5.2.0"/>
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="handset"/>
  <preference name="fullscreen" value="false"/>
  <preference name="webviewbounce" value="true"/>
  <preference name="prerendered-icon" value="true"/>
  <preference name="stay-in-webview" value="false"/>
  <preference name="ios-statusbarstyle" value="black-opaque"/>
  <preference name="detect-data-types" value="true"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="true"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="disable-cursor" value="false"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="android-build-tool" value="gradle" />

  <plugin name="cordova-plugin-console" source="npm"/>
  <plugin name="cordova-plugin-device" source="npm" />
  <plugin name="cordova-plugin-geolocation" source="npm" />
  <plugin name="cordova-plugin-dialogs" source="npm" />
  <plugin name="cordova-plugin-inappbrowser" source="npm"/>
  <plugin name="cordova-plugin-network-information" source="npm"/>
  <plugin name="cordova-plugin-splashscreen" version="2.1.0" source="npm" />
  <plugin name="cordova-plugin-globalization" source="npm" />
  <plugin name="cordova-plugin-sim" source="npm"/>
  <plugin name="cordova-plugin-whitelist" source="npm" />
  <gap:plugin name="pushwoosh-pgb-plugin" source="npm" />
  <gap:plugin name="com.phonegap.plugins.facebookconnect" version="0.9.0">
    <param name="APP_ID" value="811529012269356" />
    <param name="APP_NAME" value="JustConnect" />
  </gap:plugin>

  <icon src="res/icon/ios/Icon.png" />
  <icon src="res/icon/android/drawable-ldpi/ic_launcher.png"   platform="android"    density="ldpi" />
  <icon src="res/icon/android/drawable-mdpi/ic_launcher.png"   platform="android"    density="mdpi" />
  <icon src="res/icon/android/drawable-hdpi/ic_launcher.png"   platform="android"    density="hdpi" />
  <icon src="res/icon/android/drawable-xhdpi/ic_launcher.png"  platform="android"    density="xhdpi" />
  <icon src="res/icon/android/drawable-xxhdpi/ic_launcher.png"  platform="android"    density="xxhdpi" />

  <icon src="res/icon/ios/Icon.png"     platform="ios"     width="57" height="57" />
  <icon src="res/icon/ios/Icon-72.png"  platform="ios"      width="72" height="72" />
  <icon src="res/icon/ios/Icon@2x.png"  platform="ios"     width="114" height="114" />
  <icon src="res/icon/ios/Icon-72@2x.png"    platform="ios"      width="144" height="144" />
  <icon src="res/icon/ios/AppIcon.appiconset/Icon-60@2x.png"   platform="ios"   width="120" height="120" />
  <icon src="res/icon/ios/AppIcon.appiconset/Icon-76@2x.png"   platform="ios"   width="152" height="152" />
  <icon src="res/icon/ios/AppIcon.appiconset/Icon-76.png"    platform="ios"     width="76" height="76" />

  <splash src="res/screen/android/ldpi.png"  platform="android" density="ldpi" />
  <splash src="res/screen/android/mdpi.png"  platform="android" density="mdpi" />
  <splash src="res/screen/android/hdpi.png"  platform="android" density="hdpi" />
  <splash src="res/screen/android/xhdpi.png" platform="android" density="xhdpi" />
  <splash src="res/screen/android/xxhdpi.png" platform="android" density="xxhdpi" />

  <splash src="res/screen/ios/Default~iphone.png"    platform="ios"     width="320" height="480" />
  <splash src="res/screen/ios/Default@2x.png" platform="ios"     width="640" height="960" />
  <splash src="res/screen/ios/Default-568h@2x.png" platform="ios"     width="640" height="1136" />
  <splash src="res/screen/ios/Default-Portrait~ipad_768x1024.png"      platform="ios"     width="768" height="1024" />
  <splash src="res/screen/ios/Default-Landscape~ipad_1024x768.png"     platform="ios"     width="1024" height="768" />


  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>